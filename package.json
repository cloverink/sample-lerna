{
  "name": "sample-lerna",
  "version": "1.26.0",
  "private": true,
  "scripts": {
    "start": "lerna run start --scope @cloverink/sample-lerna-example-app",
    "test": "lerna run test --scope @cloverink/sample-lerna",
    "lint": "lerna run lint --scope @cloverink/sample-lerna",
    "build": "npm run build:helloworld && npm run build:sample-lerna",
    "build:helloworld": "lerna run build --scope @cloverink/sample-lerna-helloworld",
    "build:sample-lerna": "lerna run build --scope @cloverink/sample-lerna",
    "bootstrap": "lerna bootstrap",
    "version": "lerna version --conventional-commits --yes",
    "publish:release": "lerna publish from-git --no-verify-access --yes"
  },
  "devDependencies": {
    "lerna": "^5.1.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "workspaces": [
    "packages/*"
  ]
}
