{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "api/**",
        "apps/**"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): publish %s :tada: :rocket:"
    }
  },
  "ignoreChanges": [
    "ignored-file",
    "**/*.md",
    "**/__tests__/**",
    "**/package.json"
  ]
}
