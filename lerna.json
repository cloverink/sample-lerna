{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md",
        "lerna.json"
      ],
      "conventionalCommits": true,
      "commitHooks": false,
      "message": "chore(release): publish %s :tada: :rocket:"
    }
  },
  "ignoreChanges": [
    "ignored-file",
    "**/*.md",
    "**/__tests__/**",
    "**/package.json"
  ]
}
