{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "package.json",
        "package-lock.json"
      ],
      "message": "chore(release): Publish"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
