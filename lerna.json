{
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "main",
      "message": "chore(release): Publish [skip ci]"
    }
  },
  "ignoreChanges": [
    "ignored-file",
    "**/*.md",
    "**/package.json",
    "**/package-lock.json"
  ]
}
